{
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "types": [
            "bun-types"
        ],
        "isolatedModules": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "noEmit": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}
